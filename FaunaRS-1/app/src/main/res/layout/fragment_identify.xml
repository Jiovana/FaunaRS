<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:id="@+id/layout_identify">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tire uma foto do animal..."
                android:id="@+id/textView4"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:textAlignment="inherit"
                android:layout_gravity="center" />

            <android.support.v7.widget.CardView
        android:layout_width="348dp"
        android:layout_height="205dp"
        android:id="@+id/view"
        android:layout_gravity="center_horizontal">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img_identify"
            android:src="@drawable/foto_sombra" />

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:id="@+id/btnfoto_identify"
            android:src="@android:drawable/ic_menu_camera" />
    </FrameLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="...e selecione as opções abaixo:"
        android:id="@+id/textView22"
        android:layout_gravity="center_horizontal"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtclasse_identify"
            android:id="@+id/txt_identify_classe"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal" />

        <Spinner
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:id="@+id/spinner_classe_identify"
            android:layout_marginTop="10dp"
            android:spinnerMode="dialog"
            android:layout_gravity="center_horizontal"
            android:background="#757575"
            android:foreground="#00000000" />
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        android:columnCount="2"
        android:rowCount="4"
        android:columnOrderPreserved="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Característica 2"
            android:id="@+id/txt_identify_c4"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="60dp" />

        <Spinner
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:id="@+id/spinner_caract2_identify"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:layout_margin="0dp"
            android:spinnerMode="dialog"
            android:background="#757575" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Característica 1"
            android:id="@+id/txt_identify_c2"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal" />

        <Spinner
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:id="@+id/spinner_caract3_idenfity"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:spinnerMode="dialog"
            android:background="#757575" />

        <Spinner
            android:layout_width="145dp"
            android:layout_height="38dp"
            android:id="@+id/spinner_caract4_identify"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:spinnerMode="dialog"
            android:background="#757575" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Característica 4"
            android:id="@+id/txt_identify_c5"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Característica 3"
            android:id="@+id/txt_identify_c3"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal" />

        <Spinner
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:id="@+id/spinner_caract5_identify"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:spinnerMode="dialog"
            android:background="#757575" />

    </GridLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnhelp_identify"
        android:layout_gravity="center_horizontal"
        android:src="@android:drawable/ic_menu_help" />

    <Button
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:text="identificar"
        android:id="@+id/btn_identify"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>