<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_identify"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Tire uma foto do animal..."
            android:textAlignment="inherit"
            android:textColor="#ffffff"
            android:textSize="22sp" />

        <FrameLayout
            android:layout_width="362dp"
            android:layout_height="205dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.10">

            <ImageView
                android:id="@+id/img_identify"
                android:layout_width="362dp"
                android:layout_height="205dp"
                android:src="@drawable/silhouette" />

            <ImageButton
                android:id="@+id/btnfoto_identify"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_camera" />
        </FrameLayout>


        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="...e selecione as opções abaixo:"
            android:textColor="#ffffff"
            android:textSize="22dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_identify_classe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="@string/txtclasse_identify"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner_classe_identify"
                android:layout_width="145dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="#757575"
                android:dropDownSelector="#ff0000"
                android:foreground="#00000000"
                android:spinnerMode="dialog" />
        </LinearLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_gravity="center_horizontal"
            android:columnCount="2"
            android:columnOrderPreserved="true"
            android:rowCount="4">

            <TextView
                android:id="@+id/txt_identify_c4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"
                android:layout_row="0"
                android:text="Característica 2"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/spinner_caract2_identify"
                android:layout_width="145dp"
                android:layout_height="40dp"
                android:layout_column="0"
                android:layout_margin="0dp"
                android:layout_marginTop="10dp"
                android:layout_row="1"
                android:background="#757575"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/txt_identify_c2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_row="0"
                android:text="Característica 1"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/spinner_caract3_idenfity"
                android:layout_width="145dp"
                android:layout_height="40dp"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:layout_row="3"
                android:background="#757575"
                android:spinnerMode="dialog" />

            <Spinner
                android:id="@+id/spinner_caract4_identify"
                android:layout_width="145dp"
                android:layout_height="38dp"
                android:layout_column="1"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:layout_row="1"
                android:background="#757575"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/txt_identify_c5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"
                android:layout_row="2"
                android:text="Característica 4"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt_identify_c3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_row="2"
                android:text="Característica 3"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/spinner_caract5_identify"
                android:layout_width="145dp"
                android:layout_height="40dp"
                android:layout_column="1"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:layout_row="3"
                android:background="#757575"
                android:spinnerMode="dialog" />

        </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom|center">


            <Button
                android:id="@+id/btn_identify"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="identificar"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>